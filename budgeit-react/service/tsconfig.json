{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "lib": ["ES2015", "DOM"],
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
  }